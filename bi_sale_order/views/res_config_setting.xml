<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="inherit_res_config_settings_view_form" model="ir.ui.view">
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
        <xpath expr="//setting[@id='order_default_values']" position="inside">
            <div class="mt16" title="Sale Order Limit">
                <label for="sale_order_limit"/>
                <field name="sale_order_limit" class="text-center" style="width: 5rem;"/>
            </div>
        </xpath>
        </field>
    </record>
</odoo>